{% extends "MSICoreBundle::layout.html.twig" %}

{% block body %}
    <div class="portlet light portlet-fit portlet-datatable col-md-12" id="form_wizard_1">
        <div class="portlet-title">
            <div class="caption">
                <i class=" fa fa-users font-green"></i>
                <span class="caption-subject font-green sbold uppercase"> {{ 'msi.core.admin.users.comment'|trans({}, 'Admin') }} </span>
            </div>
        </div>
        <div class="portlet-body">
            <div class="row">
                <div class="col-md-10 col-sm-6">
                    <div class="dataTables_length" id="sample_2_length">
                        <label>
                            Show 
                            <select name="sample_2_length" aria-controls="sample_2" class="form-control input-sm input-xsmall input-inline">
                                <option value="5">
                                    5
                                </option>
                                <option value="15">
                                    15
                                </option>
                                <option value="20">
                                    20
                                </option>
                                <option value="-1">
                                    All
                                </option>
                            </select>
                        </label>
                    </div>
                </div>
                <div class="col-md-2 col-sm-6">
                    <div id="sample_2_filter" class="dataTables_filter">
                        <label>
                            Search: <input type="search" class="form-control input-sm input-small input-inline" placeholder="" aria-controls="sample_2">
                        </label>
                    </div>
                </div>
            </div>
            <table class="table table-striped table-bordered table-hover table-checkable order-column" id="sample_2">
                <thead>
                    <tr>
                        <th>{{ 'msi.core.admin.users.lastname'|trans({}, 'Admin') }}</th>
                        <th>{{ 'msi.core.admin.users.firstname'|trans({}, 'Admin') }}</th>
                        <th>{{ 'msi.core.admin.users.role'|trans({}, 'Admin') }}</th>
                        <th>{{ 'msi.core.admin.users.birth'|trans({}, 'Admin') }}</th>
                        <th>{{ 'msi.core.admin.users.address'|trans({}, 'Admin') }}</th>
                        <th>{{ 'msi.core.admin.users.email'|trans({}, 'Admin') }}</th>
                        <th>{{ 'msi.core.admin.users.phone'|trans({}, 'Admin') }}</th>
                        <th>{{ 'msi.core.admin.users.edit'|trans({}, 'Admin') }}</th>
                    </tr>
                </thead>
                <tbody>
                    {% for user in listUsers %}
                        <tr class="odd gradeX">
                            <td>{{ user.lastname }}</td>
                            <td>{{ user.firstname }}</td>
                            <td>{{ user.birth|date('d/m/Y') }}</td>
                            <td>{{ user.address }}</td>
                            <td>{{ user.email }}</td>
                            <td>{{ user.phone }}<br>
                                {{ user.mobile }}
                            </td>
                            <td>                                
                                <a href="{{ path('msi_core_admin_users')}}" class="nav-link ">
                                    <button type="button" class="btn btn-circle fa fa-eye"> 
                                    </button>
                                </a>
                                <a href="{{ path('msi_core_admin_users')}}" class="nav-link ">
                                    <button type="button" class="btn btn-circle fa fa-gear"> 
                                    </button>
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
            <div class="row">
                <div class="col-md-5 col-sm-5">
                    <div class="dataTables_info" id="sample_2_info" role="status" aria-live="polite">
                        Showing 1 to 5 of 12 records
                    </div>

                </div>
                <div class="col-md-7 col-sm-7">
                    <div class="dataTables_paginate paging_bootstrap_extended" id="sample_2_paginate">
                        <div class="pagination-panel"> 
                            Page 
                            <a href="#" class="btn btn-sm default prev disabled">
                                <i class="fa fa-angle-left">
                                </i>
                            </a>
                            <input type="text" class="pagination-panel-input form-control input-sm input-inline input-mini" maxlenght="5" style="text-align:center; margin: 0 5px;">
                            <a href="#" class="btn btn-sm default next">
                                <i class="fa fa-angle-right"></i>
                            </a> 
                            of 
                            <span class="pagination-panel-total">
                                3
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}