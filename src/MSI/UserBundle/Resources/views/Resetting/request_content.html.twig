{% trans_default_domain 'FOSUserBundle' %}

<form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class=" ">
    <h3 class="font-green">{{ 'resetting.request.title'|trans }}</h3>
    {% if invalid_username is defined %}
        <div class="form-group has-error">
        <p class="error">{{ 'resetting.request.invalid_username'|trans({'%username%': invalid_username}) }}</p>
         <input class="form-control placeholder-no-fix form-group" type="text" autocomplete="off" placeholder="{{ 'resetting.request.username'|trans }}" id="username" required="required" /> 
    {% else %}
        <div class="form-group">
        <p>{{ 'resetting.request.text'|trans }} </p>
         <input class="form-control placeholder-no-fix form-group" type="text" autocomplete="off" placeholder="{{ 'resetting.request.username'|trans }}" id="username" required="required" /> 
    {% endif %}    
    </div>
    <div class="form-actions">
        <a href="{{ url('fos_user_security_login') }}" class="btn grey btn-default"><i class="fa fa-reply"></i></a>
        <button type="submit" class="btn blue btn-success uppercase pull-right">{{ 'resetting.request.submit'|trans }}</button>
    </div>
</form>

