{% trans_default_domain 'FOSUserBundle' %}



<div class="row">
    <div class="col-md-12">
        <!-- BEGIN PROFILE CONTENT -->
        <div class="profile-content">
            <div class="row">
                <div class="col-md-12">
                    <div class="portlet light ">
                        <div class="portlet-title tabbable-line">
                            <div class="caption caption-md">
                                <i class="icon-globe theme-font hide"></i>
                                <span class="caption-subject font-blue-madison bold uppercase">{{ 'msi.user.register.title'|trans({}, 'Register') }}</span>
                            </div>
                            <ul class="nav nav-tabs">
                                <li class="active">
                                    <a href="#tab_1_1" data-toggle="tab">{{ 'msi.user.register.tab.title'|trans({}, 'Register') }}</a>
                                </li>
                            </ul>
                        </div>
                        {% for message in app.session.flashbag.get('info_user_add') %}
                        <div class="col-md-6">
                            <div class="alert alert-success alert-dismissable">
                                <button type="button" class="close" data-dismiss="alert" aria-hidden="true"></button>
                                <strong>{{ 'msi.user.register.flash'|trans({}, 'Register') }}</strong> {{ message }}
                            </div>
                        </div>
                        {% endfor %}
                        <div class="portlet-body">
                            <div class="tab-content">
                                <!-- PERSONAL INFO TAB -->
                                <div class="tab-pane active" id="tab_1_1">
                                    {{ form_start(form, { 'action': path('fos_user_registration_register'), 'attr': { 'role': 'form', 'class':'form-horizontal form-bordered' } }, form_enctype(form)) }}

                                    <div class="form-group">

                                             {{ form_label(form.username, null , {'label_attr': {'class': 'control-label col-md-3 '}}) }}
                                        <div class="col-md-4">
                                            <div class="input-icon right">
                                                <i class="icon-exclamation-sign"></i>
                                                {{ form_errors(form.username) }}
                                                {{ form_widget(form.username, {'attr': {'class': 'form-control '}}) }}
                                            </div>
                                                
                                        </div>
                                    </div>
                                    <div class="form-group">

                                            {{ form_label(form.email, null , {'label_attr': {'class': 'control-label col-md-3 '}}) }}
                                        <div class="col-md-4">
                                                {{ form_errors(form.email) }}
                                                {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                                        </div>
                                    </div>

                                    <div class="form-group">

                                            {{ form_label(form.roles, null , {'label_attr': {'class': 'control-label col-md-3 '}}) }}
                                        <div class="col-md-4">
                                                {{ form_errors(form.roles) }}
                                                {{ form_widget(form.roles, {'attr': {'class': 'form-control '}}) }}
                                        </div>
                                    </div>
                                    <div class="form-group">
                                            {{ form_errors(form.plainPassword.first) }}
                                            {{ form_label(form.plainPassword.first, null , {'label_attr': {'class': 'control-label col-md-3 '}}) }}
                                        <div class="col-md-4">
                                            {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control '}}) }}
                                        </div>
                                    </div>
                                    <div class="form-group">
                                            {{ form_errors(form.plainPassword.second) }}
                                            {{ form_label(form.plainPassword.second, null , {'label_attr': {'class': 'control-label col-md-3 '}}) }}
                                        <div class="col-md-4">
                                                {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control '}}) }}
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-offset-6 col-md-6">
                                            <button type="submit"  class="btn green ">
                                                <i class="fa fa-check"></i>{{ 'registration.submit'|trans }}
                                            </button>
                                        </div>
                                    </div>
                                    <div class="col-md-9 right">
                                        
                                    </div>
                                </div>
                                    {{ form_end(form) }}
                            </div>                        
                            <!-- END PERSONAL INFO TAB -->

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- END PROFILE CONTENT -->
</div>
</div>


