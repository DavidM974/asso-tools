{% extends "MSICoreBundle::layout.html.twig" %}

{% block add_css %}
    <link href="{{ asset('public/pages/css/profile-2.min.css') }}" rel="stylesheet" type="text/css" />
{% endblock %}

{% block body %}
    <div class="col-md-3">
    </div>
    <div class="col-md-6">
        <div class="profile">
            <div class="tabbable-line tabbable-full-width">
                <ul class="nav nav-tabs">
                    <li class="active">
                        <a href="#tab_1_1" data-toggle="tab">{{ 'msi.user.edit.Profile'|trans({}, 'Profile') }}</a>
                    </li>
                </ul>
                <div class="tab-content">
                    <div class="tab-pane active" id="tab_1_1">
                        <div class="row">
                            <div class="col-md-3">
                                <ul class="list-unstyled profile-nav">
                                    <li>
                                        {% if viewUser.imageName %}
                                            <img src="{{ vich_uploader_asset(viewUser, 'imageFile') }}" alt="{{ viewUser.imageName }}" class="img-responsive pic-bordered" style="width : 100%;" />
                                        {% else %}
                                            <img src="{{asset('public/layouts/layout2/img/avatar_default.png')}}" alt="" class="img-responsive pic-bordered" style="width : 100%;" />
                                        {% endif %}
                                    </li>
                                    <li>
                                        <a href="javascript:;"> Information </a>
                                    </li>
                                </ul>
                            </div>
                            <div class="col-md-9">
                                <div class="row">
                                    <div class="col-md-12 profile-info">
                                        <h1 class="font-green sbold uppercase">{{ viewUser.firstname }} {{ viewUser.lastname }}</h1>
                                        <br />
                                        <ul class="list-inline">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <li>
                                                        <i class="fa fa-tags"></i> {{ 'msi.user.edit.username'|trans({}, 'Profile') }} : {{ viewUser.username }} 
                                                    </li>
                                                </div>
                                                <div class="form-group">
                                                    <li>
                                                        <i class="fa fa-cog"></i> {{ 'msi.user.edit.roles'|trans({}, 'Profile') }} :
                                                        {% for role in viewUser.roles %}
                                                            {% if role == 'ROLE_SECRETAIRE'  %}
                                                                {{ 'msi.user.register.secretary'|trans({}, 'Register') }}
                                                            {% elseif role == 'ROLE_PASTEUR' %}
                                                                {{ 'msi.user.register.pastor' |trans({}, 'Register') }}
                                                            {% elseif role == 'ROLE_ADMIN' %}
                                                                {{ 'msi.user.register.admin'|trans({}, 'Register') }}
                                                            {% elseif role == 'ROLE_SUPER_ADMIN' %}
                                                                {{ 'msi.user.register.superadmin'|trans({}, 'Register') }}
                                                            {% endif %}
                                                        {% endfor %} 
                                                    </li>
                                                </div>
                                                <div class="form-group">
                                                    <li>
                                                        <i class="fa fa-envelope"></i> {{ 'msi.user.edit.email'|trans({}, 'Profile') }} : {{ viewUser.email }} 
                                                    </li>
                                                </div>
                                                <div class="form-group">
                                                    <li>
                                                        <i class="fa fa-{% if viewUser.civility == 'M' %}male{% else %}female{% endif %}"></i> {{ 'msi.user.edit.civility'|trans({}, 'Profile') }} : 
                                                        {% if viewUser.civility == 'M'  %}
                                                            {{ 'msi.user.edit.m'|trans({}, 'Profile') }}
                                                        {% elseif viewUser.civility == 'MME' %}
                                                            {{ 'msi.user.edit.mme'|trans({}, 'Profile') }}
                                                        {% elseif viewUser.civility == 'MLLE' %}
                                                            {{ 'msi.user.edit.mlle'|trans({}, 'Profile') }}
                                                        {% endif %} 
                                                    </li>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <li>
                                                        <i class="fa fa-calendar"></i> {{ 'msi.user.edit.birth'|trans({}, 'Profile') }} : {{ viewUser.birth|date('d/m/Y') }} 
                                                    </li>
                                                </div>
                                                <div class="form-group">
                                                    <li>
                                                        <i class="fa fa-map-marker"></i> {{ 'msi.user.edit.address'|trans({}, 'Profile') }} : {{ viewUser.address }} 
                                                    </li>
                                                </div>
                                                <div class="form-group">
                                                    <li>
                                                        <i class="fa fa-phone"></i> {{ 'msi.user.edit.phone'|trans({}, 'Profile') }} : {{ viewUser.phone }} 
                                                    </li>
                                                </div>
                                                <div class="form-group">
                                                    <li>
                                                        <i class="fa fa-mobile"></i> {{ 'msi.user.edit.mobile'|trans({}, 'Profile') }} : {{ viewUser.mobile }} 
                                                    </li>
                                                </div>
                                            </div>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div> 
                        <div style="float : right">
                            <a href="{{ path('msi_core_admin_users')}}" class="nav-link ">
                                <button type="submit" class="btn blue">
                                    <i class="fa fa-angle-left"></i> {{ 'msi.user.edit.back'|trans({}, 'Profile') }}
                                </button>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>       
    </div>
    <div class="col-md-3"> 
    </div>
{% endblock %}

{% block add_js %}
    <script src="{{ asset('public/global/scripts/app.min.js') }}" type="text/javascript"></script>  
    <script src="{{ asset('public/pages/scripts/profile.min.js') }}" type="text/javascript"></script>
{% endblock%}