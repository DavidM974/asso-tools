                <div class="portlet-title">
                    <div class="caption">
                        <i class="fa fa-user-plus font-green"></i>
                        <span class="caption-subject font-green sbold uppercase">{{ 'msi.members.members.add.comment'|trans({}, 'Members') }}</span>
                    </div>
