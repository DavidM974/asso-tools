{% extends "MSICoreBundle::layout.html.twig" %}

{% block add_css %}
    <link href="{{ asset('public/pages/css/profile-2.min.css') }}" rel="stylesheet" type="text/css" />
{% endblock %}

{% block body %}
    <div class="col-md-3">
    </div>
    <div class="col-md-6">
        <div class="profile">
            <div class="tabbable-line tabbable-full-width">
                <ul class="nav nav-tabs">
                    <li class="active">
                        <a href="#tab_1_1" data-toggle="tab">{{ 'msi.user.edit.Profile'|trans({}, 'Profile') }}</a>
                    </li>
                </ul>
                <div class="tab-content">
                    <div class="tab-pane active" id="tab_1_1">
                        <div class="row">
                            <div class="col-md-3">
                                <ul class="list-unstyled profile-nav">
                                    <li>
                                        {% if  viewMember.imageName %}
                                            <img class="img-circle" src="{{ vich_uploader_asset( viewMember, 'imageFile') }}" alt="{{  viewMember.imageName }}" class="img-responsive pic-bordered" style="width : 100%;"/>
                                        {% else %}
                                            <img class="img-circle" src="{{ asset('public/layouts/layout2/img/avatar_default.png') }}" alt="" class="img-responsive" class="img-responsive pic-bordered" style="width : 100%;" />
                                        {% endif %}
                                    </li>
                                    <li>
                                        <a href="javascript:;"> Information </a>
                                    </li>
                                </ul>
                            </div>
                            <div class="col-md-9">
                                <div class="row">
                                    <div class="col-md-12 profile-info">
                                        <h1 class="font-green sbold uppercase">{{ viewMember.firstname }} {{ viewMember.lastname }}</h1>
                                        <br />
                                        <ul class="list-inline">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <li>
                                                        <i class="fa fa-envelope"></i> {{ 'msi.user.edit.email'|trans({}, 'Profile') }} : {{ viewMember.email }} 
                                                    </li>
                                                </div>
                                                <div class="form-group">
                                                    <li>
                                                        <i class="fa fa-{% if viewMember.sex == 1 %}male{% else %}female{% endif %}"></i> {{ 'msi.user.edit.sex'|trans({}, 'Profile') }} : 
                                                        {% if viewMember.sex== 0  %}
                                                            {{ 'msi.user.edit.male'|trans({}, 'Profile') }}
                                                        {% elseif viewMember.sex == 1 %}
                                                            {{ 'msi.user.edit.female'|trans({}, 'Profile') }}
                                                        {% endif %} 
                                                    </li>
                                                </div>
                                                <div class="form-group">
                                                    <li>
                                                        <i class="fa fa-home"></i> {{ 'msi.members.family.situation'|trans({}, 'Members') }} : 
                                                        {% if viewMember.familySituation == 'S'  %}
                                                            {{ 'msi.members.civility.single'|trans({}, 'Members') }}
                                                        {% elseif viewMember.familySituation == 'M' %}
                                                            {{ 'msi.members.civility.maried'|trans({}, 'Members') }}
                                                        {% elseif viewMember.familySituation == 'V' %}
                                                            {{ 'msi.members.civility.veuf'|trans({}, 'Members') }}
                                                        {% elseif viewMember.familySituation == 'D' %}
                                                            {{ 'msi.members.civility.divorce'|trans({}, 'Members') }}
                                                        {% elseif viewMember.familySituation == 'R' %}
                                                            {{ 'msi.members.civility.remaried'|trans({}, 'Members') }}
                                                        {% endif %} 
                                                    </li>
                                                </div>
                                                <div class="form-group">
                                                    <li>
                                                        <i class="fa fa-users"></i> {{ 'msi.members.members.services'|trans({}, 'Members') }} :  
                                                        {% for service in viewMember.services  %} 
                                                            <span class="label label-sm label-info"> {{ service.label }}  </span>&nbsp; 
                                                        {% endfor %}
                                                    </li>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <li>
                                                        <i class="fa fa-calendar"></i> {{ 'msi.user.edit.birth'|trans({}, 'Profile') }} : {{ viewMember.birth|date('d/m/Y') }} 
                                                    </li>
                                                </div>
                                                <div class="form-group">
                                                    <li>
                                                        <i class="fa fa-map-marker"></i> {{ 'msi.user.edit.address'|trans({}, 'Profile') }} : {{ viewMember.address }} 
                                                    </li>
                                                </div>
                                                <div class="form-group">
                                                    <li>
                                                        <i class="fa fa-phone"></i> {{ 'msi.user.edit.phone'|trans({}, 'Profile') }} : {{ viewMember.phone }} 
                                                    </li>
                                                </div>
                                                <div class="form-group">
                                                    <li>
                                                        <i class="fa fa-mobile"></i> {{ 'msi.user.edit.mobile'|trans({}, 'Profile') }} : {{ viewMember.mobile }} 
                                                    </li>
                                                </div>
                                            </div>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div> 
                        <div style="float : right">
                            <a href="{{ path('msi_members_list')}}" class="nav-link ">
                                <button type="submit" class="btn blue">
                                    <i class="fa fa-angle-left"></i> {{ 'msi.user.edit.back'|trans({}, 'Profile') }}
                                </button>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>       
    </div>
    <div class="col-md-3"> 
    </div>
{% endblock %}

{% block add_js %}
    <script src="{{ asset('public/global/scripts/app.min.js') }}" type="text/javascript"></script>  
    <script src="{{ asset('public/pages/scripts/profile.min.js') }}" type="text/javascript"></script>
{% endblock%}