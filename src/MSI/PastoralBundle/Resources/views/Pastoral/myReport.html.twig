{% endblock %}

{% block body %}
    <div class="portlet light portlet-fit portlet-datatable col-md-12" id="form_wizard_1">
        <div class="portlet-title">
            <div class="caption">
                <i class=" fa fa-th-list font-green"></i>
                <span class="caption-subject font-green sbold uppercase"> {{ 'msi.core.menu.pastoral.followed.mine.comment'|trans({}, 'Pastoral') }} </span>
            </div>
        </div>
        <div class="portlet-body">
            <table class="table table-striped table-bordered table-hover table-checkable order-column" id="sample_2">
                <thead>
                    <tr>
                        <th class="table-checkbox">
                            <input type="checkbox" class="group-checkable" data-set="#sample_2 .checkboxes" /> 
                        </th>
                        <th>{{ 'msi.pastoral.report.person.followed'|trans({}, 'Pastoral') }}</th>
                        <th>{{ 'msi.pastoral.report.date.report'|trans({}, 'Pastoral') }}</th>
                        <th>{{ 'msi.pastoral.report.extract'|trans({}, 'Pastoral') }}</th>
                        <th>{{ 'msi.pastoral.report.view'|trans({}, 'Pastoral') }}</th>
                        <th>{{ 'msi.pastoral.report.edit'|trans({}, 'Pastoral') }}</th>
                    </tr>
                </thead>
                <tbody>
                    <tr class="odd gradeX">
                        <td><input type="checkbox" class="checkboxes" value="1" /></td>
                        <td>Nom de la personne suivi</td>
                        <td>Date du suivi</td>    
                        <td>Extrait du suivi</td>
                        <td style ="text-align:center;">
                            <a href="javascript:;" class="nav-link ">
                                <a href="" class="btn btn-circle btn-icon-only grey-cascade">
                                    <i class="fa fa-eye"></i>
                                </a>
                            </a>                            
                        </td>
                        <td style ="text-align:center;">    
                            <a href="javascript:;" class="nav-link ">
                                <a href="" class="btn btn-circle btn-icon-only grey-cascade">
                                    <i class="fa fa-edit"></i>
                                </a>
                            </a>                            
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}

